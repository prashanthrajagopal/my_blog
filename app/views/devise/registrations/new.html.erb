<div class="blurred">
  <div class="intro-header">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="intro-message intro-message-signin">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		        	<%= devise_error_messages! %>
              <div class="login-form">
              <div class="login-form-inner">
                <%= f.email_field :email, :autofocus => true, :placeholder => "Email Address", :class => "form-control" %>
                <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
                <%= f.password_field :password_confirmation, :placeholder => "Confirm Password", :class => "form-control" %>
                <br /><br />
                <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
                <%= render "devise/shared/links" %>
              </div>
              </div>
            <% end %>
          </div>        
        </div>
      </div>
    </div><!-- /.container -->
  </div><!-- /.intro-header -->
</div>