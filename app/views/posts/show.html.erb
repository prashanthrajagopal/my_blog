<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h1><%= @post.title %></h1>
      <p><span class="glyphicon glyphicon-time"></span> <%= @post.published_on %></p>
      <%= @post.body %>
      <small>
        <%= link_to 'Edit', edit_post_path(@post) %> |
        <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </small>
    </div>
    <%= render 'posts/sidebar' %>
  </div>
  <hr>
</div>