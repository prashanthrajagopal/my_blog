<%= link_to 'New Post', new_post_path %>


<div id="posts">
  <% @posts.each do|post| %>
  <div id="post">
    <h3><%= link_to post.title, post %></h3>
    <%= post.published_on %>
    <%= post.tags %>
    <%= simple_format post.body %>
    <small>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
  </div>
  <% end %>
</div>

